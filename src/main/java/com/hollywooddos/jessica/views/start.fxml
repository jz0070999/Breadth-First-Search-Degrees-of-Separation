<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.hollywooddos.jessica.views.StartScreen"
    stylesheets="@style.css" styleClass="pageBackgroundPadding">
    <center>
        <VBox spacing="20" alignment="CENTER_LEFT">
            <Label text="Hollywood Actors Degrees of Separation" styleClass="headerLabel" />
            <Label fx:id="greetingLabel" text="Hello there!" styleClass="subheaderLabel" />
            <Button text="Random" styleClass="button" />
            <Button text="Custom" styleClass="button-clear" onAction="#handleStartCustom" />
        </VBox>
    </center>

    <!-- creating a bottom region for the back button -->
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Back" onAction="#goBackToPrevious" styleClass="button-clear" />
        </HBox>
    </bottom>
</BorderPane>
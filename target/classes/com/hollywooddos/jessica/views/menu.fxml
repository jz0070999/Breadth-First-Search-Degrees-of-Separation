<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.hollywooddos.jessica.views.MenuScreen"
    stylesheets="@style.css" styleClass="pageBackgroundPadding">
    <center>
        <VBox spacing="20" alignment="CENTER_LEFT">
            <Label text="Hollywood Actors Degrees of Separation" styleClass="headerLabel" />
            <Label text="Menu" styleClass="subheaderLabel" />
            <Button text="Start Game" onAction="#handleStartGame" styleClass="button" />
            <Button text="Leaderboard" onAction="#handleLeaderboard" styleClass="button" />
        </VBox>
    </center>
    <!-- creating a bottom region for the back button -->
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Back" onAction="#goBackToPrevious" styleClass="button-clear" />
        </HBox>
    </bottom>
</BorderPane>